<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.currencydetail.CoinDetailActivity">

    <data>

        <import type="android.view.View"/>

        <variable
            name="currency"
            type="cz.levinzonr.cryptostore.model.Currency"
            />

        <variable
            name="detailVM"
            type="cz.levinzonr.cryptostore.viewmodel.DetailViewModel"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@{currency.name}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:visibility="@{detailVM.isLoading ? View.VISIBLE : View.GONE}"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>